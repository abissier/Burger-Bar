<link rel="stylesheet" href="../public/assets/css/burger_style.css" type="text/css">
<h1>Burger Bar</h1>

<main>
    <div class="left">
        <h2>Burger Specials</h2>

        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    {{!-- <img src="../../public/assets/img/burger2.png" alt="burger" width="500" height="500"> --}}
    <div class="right">
        <h2>RIP Burgers</h2>

        <ul>
            {{#each burgers}}
                {{#if devoured}}
                   <li>{{burger_name}}</li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</main>
<footer>
    <h2>Add Burger Here</h2>
    <form class="create-form">

        <div class="form-group">
            <input type="text" id="burger" name="name">
        </div>
        <button type="submit">Add Burger</button>

    </form>
</footer>