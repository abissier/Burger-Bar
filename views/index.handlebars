<link rel="stylesheet" href="../public/assets/css/burger_style.css" type="text/css">
<div class="background-box">
<h1>Burger Bar</h1>
    <main>
        <div class="left">
            <h2>Burger Specials</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="right">
            <h2>RIP Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </main>
    <footer>
        <h2>Add Burger -></h2>
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="burger" name="name">
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </footer>
</div>