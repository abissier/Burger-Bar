<link rel="stylesheet" href="../public/assets/css/burger_style.css" type="text/css">
<div class="background-box">
<h1>Burger Bar</h1>
    <main>
        <section class="burger-specials">
            <h2>Burger Specials</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </section>
        <section class="burgers-eaten">
            <h2>RIP Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{burger_name}}<button class="delete-burger" data-id={{this.id}}>X</button></li>
                {{/if}}
                {{/each}}
            </ul>
        </section>
    </main>
    <footer>
        <h2>Add Burger</h2>
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="burger" name="name">
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </footer>
</div>